<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="75dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_forecast_day"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="@string/day_name" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_item_icon"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/tv_forecast_day"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_forecast_temp_c"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_below="@+id/img_item_icon"
                android:text="@string/temp_c" />

            <TextView
                android:id="@+id/tv_"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_below="@+id/img_item_icon"
                android:text="@string/temp_c" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>