<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="85dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_forecast_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/day_name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_forecast_condition_icon"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/tv_forecast_day"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_forecast_condition_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/img_forecast_condition_icon"
                android:gravity="center"
                android:text="@string/condition_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_forecast_temp_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_forecast_condition_text"
                android:gravity="center"
                android:text="@string/temp_c"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>